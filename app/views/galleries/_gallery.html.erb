<div class='col-2 text-center align-self-start'>
  <%= link_to image_tag(gallery.icon.url(:thumb).to_s,
              class: 'rounded mx-auto d-block images'), gallery_path(gallery) %>
  <%= gallery.title %></br>
  <% if current_user.admin? %>
    <%= link_to 'Редактировать', edit_gallery_path(gallery) %> |
    <%= link_to 'Удалить', [gallery.division, gallery],
                method: :delete,
                data: { confirm: 'Вы уверены?' } %>
  <% end %>
</div>
