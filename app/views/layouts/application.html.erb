<!DOCTYPE html>
<html>
  <head>
    <title>Museum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <div class='wrapper'>
      <div class='content'>
        <!-- Навигация -->
        <% unless current_page?(root_path) %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-end">
          <ul class='navbar-nav'>
            <% if user_signed_in? %>
            <li class='nav-item'>
              <%= link_to('Выйти', destroy_user_session_path, method: :delete, class: 'nav-link') %>
            </li>
            <% else %>
            <li class='nav-item'>
              <%= link_to('Войти', new_user_session_path, class: 'nav-link')  %>
            </li>
            <li class='nav-item'>
              <%= link_to('Регистрация', new_user_registration_path, class: 'nav-link')  %>
            </li>
            <% end %>
          </ul>
        </nav>
        <% end %>

          <%= yield %>

      </div>

      <% unless current_page?(root_path) %>
      <div class='container'>
        <footer class='row align-items-center text-center foo'>
          <div class='col'>
            <%= link_to 'Вернуться на главную', root_path, class: 'btn btn-primary' %>
          </div>
        </footer>
      </div
      <% end %>
    </div>

    <%= javascript_pack_tag 'fslightbox'%>
  </body>
</html>
