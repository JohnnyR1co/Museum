<h1>Divisions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Logo</th>
    <th colspan="3"></th>
  </tr>

  <% @divisions.each do |division| %>
    <tr>
      <td><%= division.name %></td>
      <td><%= division.logo %></td>
      <td><%= link_to 'Show', division_path(division) %></td>
      <td><%= link_to 'Edit', edit_division_path(division) %></td>
      <td><%= link_to 'Destroy', division_path(division),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New division', new_division_path %>
