<%= form_with scope: :division, url: divisions_path, local: true do |form| %>
  <% if @division.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@division.errors.count, 'error') %> prohibited
        this division from being saved:
      </h2>
      <ul>
        <% @division.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= link_to 'Назад', divisions_path %>

  <p>
    <%= form.label 'Заголовок' %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    Добавить изображение
    <%= form.file_field :icon %>
  </p>

  <p>
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
  </p>

<% end %>
