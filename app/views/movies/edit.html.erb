<div class='content'>
  <h1>Редактировать</h1>

  <%= form_with(model: @movie, local: true) do |form| %>
    <% if @movie.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@movie.errors.count, "error") %> prohibited
          this movie from being saved:
        </h2>
        <ul>
          <% @movie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= form.label 'Заголовок' %><br>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label 'Видео файл' %><br>
      <%= form.file_field :video_file %>
    </p>
    <p>
      <%= form.label 'Заставка' %><br>
      <%= form.file_field :icon %>
    </p>
    <p>
      <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
    </p>
  <% end %>
</div>

<footer class='row align-items-center text-center foo'>
  <div class='col'>
    <%= link_to 'Назад', gallery_path(@movie.gallery_id), class: 'btn btn primary' %>
  </div>
</footer>
